<Window x:Class="Base64EncoderAndDecoder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Base64EncoderAndDecoder"
        mc:Ignorable="d"
        Title="Base64のエンコードやデコードするやつ" Height="350" Width="525">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*" />
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="0.4*" />
        </Grid.RowDefinitions>
        <TextBox Name="InputText" Grid.Row="0" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="EncodeButton" Content="Encode" 
                    Click="EncodeButton_Click" Width="80" Height="20"
                    Margin="10,10,10,10"/>
            <Button Name="DecodeButton" Content="Decode" 
                    Click="DecodeButton_Click" Width="80"
                    Margin="10,20" />
        </StackPanel>
        <TextBox Name="OutputText" Grid.Row="2" />
    </Grid>
</Window>
